<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #1E90FF;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.comandasinterfaz.PrimaryController">
   <center>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <children>
            <TableView fx:id="tvTabla" prefHeight="550.0" prefWidth="850.0" style="-fx-background-color: #1E90FF;">
              <columns>
                <TableColumn fx:id="CCiclo" editable="false" prefWidth="75.0" sortable="false" style="-fx-background-color: #FFC300;" text="Ciclo" />
                <TableColumn fx:id="CAlumno" editable="false" prefWidth="75.0" sortable="false" style="-fx-background-color: #FFC300;" text="Alumno" />
                  <TableColumn fx:id="CTipo" editable="false" prefWidth="75.0" sortable="false" style="-fx-background-color: #FFC300;" text="Tipo Pedido" />
                  <TableColumn fx:id="CProducto" editable="false" prefWidth="75.0" sortable="false" style="-fx-background-color: #FFC300;" text="Producto" />
                  <TableColumn fx:id="CPrecio" prefWidth="75.0" sortable="false" style="-fx-background-color: #FFC300;" text="Precio" />
                  <TableColumn fx:id="CEstado" editable="false" prefWidth="101.0" sortable="false" style="-fx-background-color: #FFC300;" text="Estado" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
   <top>
      <Label text="Gestor de comandas" textFill="#fffdfd" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <bottom>
      <Label fx:id="pendientes" text="Pedidos pendientes" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
      </Label>
   </bottom>
</BorderPane>
